{
    project: {
        name: 'haxebridge',
        version : '1.0.0',

        lib : { },

        build: {
            post: {
                name: 'haxebridge post build',
                script: 'hook.post.js',
                desc: 'handles post haxebridge build processing'
            }
        }
    },

    if: {
        "android && !static_link": {
            build: {
                defines: ['haxebridge_dynamic_link']
            }
        },
        "linux && !static_link": {
            build: {
                defines: ['haxebridge_dynamic_link']
            }
        },
        "!haxebridge_dynamic_link" : {
            build: {
                defines: ['static_link'],
                hxcpp: {
                    flags: ['-Dstatic_link']
                }
            }
        }
    }
}
